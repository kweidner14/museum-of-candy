<% include ../partials/header %>

<div class="container aboutContainer">
    <header class="jumbotron">
        <section class="container-fluid">
            <h1>Join The Party!</h1>
            <hr>
            <form action="/participate" method="POST" name="participateForm">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputFirst">First Name</label>
                        <input type="text" class="form-control" name="firstName" id="inputFirst" placeholder="John">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputLast">Last Name</label>
                        <input type="text" class="form-control" name="lastName" id="inputLast" placeholder="Doe">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail">Email Address</label>
                    <input type="email" class="form-control" name="email" id="inputEmail" placeholder="example123@address.com">
                </div>
                <div class="form-group">
                    <label for="inputText">Message</label>
                    <textarea id="inputText" name="message" cols="30" rows="4" class="form-control" placeholder="Please tell us a bit about yourself. Why would you be a good addition to our team?"></textarea>
                </div>
                <button type="submit" class="btn btn-md">Submit</button>
            </form>
            <a href="/" id="returnButton">Return Home</a>
        </section>
    </header>
</div>

<% include ../partials/footer %>